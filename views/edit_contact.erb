<h1> <i class="fi-page-edit"></i> Edit Contact</h1>

<form action="/contacts/<%= @contact.id %>" method="post">
  First Name:</br><input type="text" name="first_name" value=<%= @contact.first_name %>></br>
  Last Name:</br><input type="text" name="last_name"  value=<%= @contact.last_name %>></br>
  Email:</br><input type="text" name="email" value=<%= @contact.email %>></br>
  Note:</br><input type="text" name="note"  value=<%= @contact.notes %>></br>
  <button type="submit" >Update Contact</button>
</form>
