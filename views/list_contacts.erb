
    <h1><i class="fi-list"></i>List All Contacts</h1>

<table>
  <thead>
    <tr>
      <th class="odd"></th>
      <th class="odd"></th>
      <th class="odd">First</th>
      <th class="odd">Last</th>
      <th class="odd">Email</th>
      <!-- <th class="odd">Notes</th> -->
    </tr>
  </thead>
    <% @contacts.each_with_index do |contact,index| %>
    <tr>
        <td <%= class_odd_or_even index %>><a href="/contacts/delete/<%= contact.id %>"><i class="fi-x"></i></a></td>
        <td <%= class_odd_or_even index %> ><a href="/contacts/edit/<%= contact.id %>"><i class="fi-page-edit"></i></a></td>
        <td <%= class_odd_or_even index %>><%= contact.first_name %></td>
        <td <%= class_odd_or_even index %>><%= contact.last_name %></td>
        <td <%= class_odd_or_even index %>><%= contact.email %></td>
        <!-- <td <%= class_odd_or_even index %>><%= contact.notes %></td> -->
    </tr>
    <% end %>
  </tbody>
</table>

